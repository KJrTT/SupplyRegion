<Window x:Class="SupplyRegion.View.AddRequestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Новая заявка на закупку" 
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#F8FAFC">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="Margin" Value="0 0 0 8"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="BorderBrush" Value="#E2E8F0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#1E293B"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16 10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <StackPanel Grid.Row="0">
            <TextBlock Text="Новая заявка на закупку" 
                      FontSize="24"
                      FontWeight="Bold"
                      Foreground="#1E293B"/>
            <TextBlock Text="Заполните все обязательные поля для создания заявки" 
                      FontSize="14"
                      Foreground="#64748B"
                      Margin="0 8 0 16"/>
        </StackPanel>

        
        <ScrollViewer Grid.Row="1" 
                     VerticalScrollBarVisibility="Auto">
            <StackPanel>
                
                <StackPanel Margin="0 0 0 16">
                    <TextBlock Text="Инициатор*" 
                              FontWeight="SemiBold"/>
                    <TextBox x:Name="InitiatorTextBox"
                            Text="{Binding NewRequest.Initiator, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                
                <StackPanel Margin="0 0 0 16">
                    <TextBlock Text="Подразделение*" 
                              FontWeight="SemiBold"/>
                    <ComboBox ItemsSource="{Binding Departments}"
                             SelectedItem="{Binding NewRequest.Department}"
                             IsEditable="True"/>
                </StackPanel>

                
                <StackPanel Margin="0 0 0 16">
                    <TextBlock Text="Наименование товара*" 
                              FontWeight="SemiBold"/>
                    <TextBox Text="{Binding NewRequest.ProductName, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>

                
                <Grid Margin="0 0 0 16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Количество*" 
                                  FontWeight="SemiBold"/>
                        <TextBox Text="{Binding NewRequest.Quantity, UpdateSourceTrigger=PropertyChanged}"
                                PreviewTextInput="NumberValidationTextBox"/>
                    </StackPanel>

                    
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Ориентировочная цена*" 
                                  FontWeight="SemiBold"/>
                        <TextBox Text="{Binding NewRequest.EstimatedPrice, UpdateSourceTrigger=PropertyChanged}"
                                PreviewTextInput="DecimalValidationTextBox"/>
                    </StackPanel>
                </Grid>

                
                <Border Background="#F0F9FF"
                       Padding="16"
                       Margin="0 0 0 16">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Общая стоимость" 
                                      FontSize="12"
                                      Foreground="#0C4A6E"/>
                            <TextBlock Text="{Binding NewRequest.TotalPrice, StringFormat='{}₽{0:N2}'}" 
                                      FontSize="20"
                                      FontWeight="Bold"
                                      Foreground="#0C4A6E"/>
                        </StackPanel>

                        <StackPanel Grid.Column="1" 
                                   VerticalAlignment="Center">
                            <TextBlock Text="Итого" 
                                      FontSize="12"
                                      Foreground="#64748B"/>
                            <TextBlock Text="{Binding NewRequest.Quantity, StringFormat='{}× {0} шт'}" 
                                      FontSize="12"
                                      Foreground="#64748B"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>

        
        <Border Grid.Row="2" 
               Padding="16 24 0 0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена" 
                       Command="{Binding CancelCommand}"
                       Background="#F1F5F9"
                       Foreground="#64748B"
                       MinWidth="100"
                       Margin="0 0 12 0"/>

                <Button x:Name="SaveButton"
                       Content="Создать заявку" 
                       Command="{Binding SaveCommand}"
                       Background="#3B82F6"
                       Foreground="White"
                       MinWidth="140"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
