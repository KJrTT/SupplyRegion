<Window x:Class="SupplyRegion.View.ChangeStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменение статуса заявки"
        Height="280" Width="420"
        WindowStartupLocation="CenterOwner"
        Background="#F8FAFC">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        
        <StackPanel Grid.Row="0">
            <TextBlock Text="Изменение статуса"
                      FontSize="20"
                      FontWeight="Bold"
                      Foreground="#1E293B"/>
            <TextBlock Text="Выберите новый статус для заявки"
                      FontSize="13"
                      Foreground="#64748B"
                      Margin="0 6 0 16"/>
        </StackPanel>

        
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <TextBlock Text="Статус"
                      FontSize="14"
                      FontWeight="SemiBold"
                      Foreground="#1E293B"
                      Margin="0 0 0 8"/>
            <ComboBox x:Name="StatusComboBox"
                     FontSize="11"
                     Padding="5"
                     Background="White"
                     BorderBrush="#E2E8F0"
                     BorderThickness="1"
                     VerticalContentAlignment="Center"/>
        </StackPanel>

        
        <Border Grid.Row="2" Padding="0 24 0 0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Отмена"
                       Width="100"
                       Margin="0 0 12 0"
                       Padding="16 10"
                       Background="#F1F5F9"
                       Foreground="#64748B"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="Cancel_Click"/>
                <Button Content="Сохранить"
                       Width="120"
                       Padding="16 10"
                       Background="#3B82F6"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="Save_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

